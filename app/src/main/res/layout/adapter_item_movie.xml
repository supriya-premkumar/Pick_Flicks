<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgContent"
        android:baselineAligned="false">


        <ImageView

            android:id="@+id/movieImage"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@color/bgTitleLeft"
            android:maxHeight="179dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:gravity="center_vertical"
            android:maxHeight="179dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/mainTextColor"
            tools:text="Independence Day: Resurgence" />


        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:gravity="center_vertical"
            android:lines="8"
            android:maxHeight="179dp"
            android:textColor="@color/mainTextColor"
            tools:text="We always knew they were coming back. Using recovered alien technology, the nations of Earth have collaborated on an immense defense program to protect the planet. But nothing can prepare us for the aliensâ€™ advanced and unprecedented force. Only the ingenuity of a few brave men and women can bring our world back from the brink of extinction." />
    </RelativeLayout>
</LinearLayout>
